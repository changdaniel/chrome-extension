{
    "manifest_version": 2,
  
    "name": "Mallet Plugin",
    "description": "This extension will allow Mallet users to view their user information",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "background": {
        "scripts":["background.js"],
        "persistent": true
    },
    "permissions": [
     "activeTab",
     "declarativeContent"
     ]
  }