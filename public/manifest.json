{
  "manifest_version": 2,

  "name": "Cobble",
  "description": "Cobble lets you donate to anyone on the internet with just 1-click.",
  "version": "0.0.8",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the pop"
  },
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "activeTab", "https://api.joincobble.com/"
  ]  
}